protocol ospf v2 {
        ipv4 {
          import where net ~ [ {{nomad_anycast_subnet}}+ ];
          export where net ~ [ {{nomad_anycast_subnet}}+ ];
        };
  area 0 {
    interface "nomad" {
      cost 1;
      hello 2;
      dead count 4;
    };
    interface "eth*" {
      cost 2;
      hello 5;
      dead count 4;
    };
  };
}

